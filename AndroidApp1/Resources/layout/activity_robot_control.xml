<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Connection Status -->
    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disconnected"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/btnControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnForward"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/forward" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLeft"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/left" />

            <Button
                android:id="@+id/btnStop"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/stop" />

            <Button
                android:id="@+id/btnRight"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/right" />
        </LinearLayout>

        <Button
            android:id="@+id/btnBackward"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/backward" />
    </LinearLayout>
        
    <!-- Left Slider -->
    <TextView
        android:id="@+id/tvLeftMotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/left_motor"
        android:layout_below="@id/tvConnectionStatus"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp" />

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_below="@id/tvLeftMotor"
        android:layout_above="@id/btnControl"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">
        
        <SeekBar
            android:id="@+id/sbLeftMotor"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:max="508"
            android:progress="254"
            android:rotation="270" />
    </FrameLayout>

    <!-- Right Slider -->
    <TextView
        android:id="@+id/tvRightMotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/right_motor"
        android:layout_below="@id/tvConnectionStatus"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp" />

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_below="@id/tvRightMotor"
        android:layout_above="@id/btnControl"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">
        
        <SeekBar
            android:id="@+id/sbRightMotor"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:max="508"
            android:progress="254"
            android:rotation="270" />
    </FrameLayout>
</RelativeLayout>